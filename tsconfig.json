{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "routes/*": ["./src/routes/*"],
      "controllers/*": ["./src/controllers/*"],
      "config/*": ["./src/config/*"],
      "services/*": ["./src/services/*"],
      "views/*": ["./src/views/*"]
    }
  }
}
